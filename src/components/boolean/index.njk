{% extends layoutTemplate %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% if question.html %}
    {% set htmlHint %}
        {% include question.html ignore missing %}
    {% endset %}
{% endif %}

{% block dynQuestionContent %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form action="" method="post" novalidate>
                {% if _csrf %}<input type="hidden" name="_csrf" value="{{ _csrf }}">{% endif %}
                {% if question.descriptive %}
                    <h1 class="govuk-heading-l">
                        {{ question.descriptive.title }}
                    </h1>
                    {% for paragraph in question.descriptive.paragraphs %}
                        <p class="govuk-body">{{ paragraph }}</p>
                    {% endfor %}
                {% endif %}
                {% if question.interfaceType === 'radio' %}
                    {% if question.descriptive %}
                        <h2 class="govuk-heading-m">
                            {{ question.question }}
                        </h2>
                        {{ govukRadios({
                            classes: "govuk-radios",
                            idPrefix: question.fieldName,
                            name: question.fieldName,
                            errorMessage: errors[question.fieldName] and {
                                text: errors[question.fieldName].msg
                            },
                            hint: question.hint and { text: question.hint },
                            items: question.options
                        }) }}
                    {% else %}
                    {{ govukRadios({
                        classes: "govuk-radios",
                        idPrefix: question.fieldName,
                        name: question.fieldName,
                        errorMessage: errors[question.fieldName] and {
                            text: errors[question.fieldName].msg
                        },
                        fieldset: {
                            legend: {
                                text: question.question,
                                isPageHeading: true,
                                classes: "govuk-fieldset__legend--l"
                            }
                        },
                        hint: question.hint and { text: question.hint },
                        items: question.options
                    }) }}
                    {% endif %}

                {% elif question.interfaceType === 'checkbox' %}
                    {% if question.descriptive %}
                        <h2 class="govuk-heading-m">
                            {{ question.question }}
                        </h2>
                        {{ govukCheckboxes({
                            classes: "govuk-checkboxes",
                            idPrefix: question.fieldName,
                            name: question.fieldName,
                            errorMessage: errors[question.fieldName] and {
                                text: errors[question.fieldName].msg
                            },
                            hint: htmlHint and {
                                html: htmlHint
                            },
                            items: question.options
                        }) }}
                    {% else %}
                    {{ govukCheckboxes({
                        classes: "govuk-checkboxes",
                        idPrefix: question.fieldName,
                        name: question.fieldName,
                        errorMessage: errors[question.fieldName] and {
                            text: errors[question.fieldName].msg
                        },
                        hint: htmlHint and {
                            html: htmlHint
                        },
                        fieldset: {
                            legend: {
                                text: question.question,
                                isPageHeading: true,
                                classes: "govuk-fieldset__legend--l"
                            }
                        },
                        items: question.options
                    }) }}
                    {% endif %}
                {% endif %}
                {{ govukButton({
                    text: continueButtonText,
                    type: "submit",
                    attributes: { "data-cy":"button-save-and-continue"}
                }) }}
            </form>
        </div>
    </div>
{% endblock %}
