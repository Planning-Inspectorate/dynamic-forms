{% from "govuk/components/textarea/macro.njk" import govukTextarea %}

{{ govukTextarea({
    label: {
        text: question
    },
    hint: hint and {
        text: hint
    },
    id: fieldName,
    name: fieldName,
    value: value,
    errorMessage: errors[fieldName] and {
        text: errors[fieldName].msg
    }
}) }}